{
  "name": "meta-video-converter",
  "version": "3.22.0",
  "description": "Convert images to AI-animated videos using Meta AI",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "gr8xpert",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "sharp": "^0.33.0"
  },
  "build": {
    "appId": "com.gr8xpert.metavideoconverter",
    "productName": "Meta Video Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!assets/realesrgan/**/*"
    ],
    "asarUnpack": [
      "assets/realesrgan/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/realesrgan",
        "to": "realesrgan",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    }
  }
}
